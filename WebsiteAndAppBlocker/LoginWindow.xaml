<Window x:Class="WebsiteAndAppBlocker.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Enter Password:"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="1" Margin="0,10,0,0" KeyDown="PasswordBox_KeyDown"/>
        <Button Content="Login" Grid.Row="2" Margin="0,20,0,0" Click="LoginButton_Click" Width="100" HorizontalAlignment="Center"/>
    </Grid>
</Window>
